@model PruebaTecnicaAlerium.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        h1, h3, h4 {
            color: #343a40;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

        .btn-cancel {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container form-container">
        <h1>Eliminar Proveedor</h1>
        <h3>¿Está seguro de que desea eliminar este proveedor?</h3>
        <div>
            <h4>@Model.RazonSocial</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    Código
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class="col-sm-4">
                    RFC
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.RFC)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="idProveedor" />
                <input type="submit" value="Eliminar" class="btn btn-delete" onclick="return confirmDelete(@Model.Productos.Count)" />
                <a asp-action="Index" class="btn btn-cancel">Cancelar</a>
            </form>
        </div>
    </div>

    @section Scripts {
        <script type="text/javascript">
            function confirmDelete(productCount) {
                if (productCount > 0) {
                    return confirm('El proveedor tiene productos asociados. ¿Está seguro de que desea eliminarlo?');
                }
                return true;
            }
        </script>
    }

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
